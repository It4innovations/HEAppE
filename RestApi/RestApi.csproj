    <ItemGroup>
        <ProjectReference Include="..\BackgroundThread\BackgroundThread.csproj"/>
        <ProjectReference Include="..\CertificateGenerator\CertificateGenerator.csproj"/>
        <ProjectReference Include="..\DataAccessTier\DataAccessTier.csproj"/>
